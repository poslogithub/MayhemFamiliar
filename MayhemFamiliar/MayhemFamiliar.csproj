<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.22000.0</TargetFramework>
	<Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
	<NoWarn>$(NoWarn);CS8600</NoWarn>
    <NoWarn>$(NoWarn);CS8602</NoWarn>
    <NoWarn>$(NoWarn);CS8604</NoWarn>
	<NoWarn>$(NoWarn);CS8618</NoWarn>
	<NoWarn>$(NoWarn);CS8622</NoWarn>
  </PropertyGroup>

	<Target Name="RemoveUnnecessarySQLiteFolders" AfterTargets="CopyFilesToOutputDirectory">
		<RemoveDir Directories="$(OutDir)runtimes\linux-x64" />
		<RemoveDir Directories="$(OutDir)runtimes\osx-x64" />
		<RemoveDir Directories="$(OutDir)runtimes\win-x86" />
	</Target>
	
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.119" />
  </ItemGroup>

</Project>